@model Movietoon.ViewModels.MovieDetailViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Movies Page</h2>


@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary()
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6" 6>    <div class="form-group">
                        @Html.LabelFor(m => m.Movie.Title)
                        @Html.TextAreaFor(m => m.Movie.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Movie.Title)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Movie.ReleaseYear)
                        @Html.TextAreaFor(m => m.Movie.ReleaseYear, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Movie.ReleaseYear)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Movie.Price)
                        @Html.TextAreaFor(m => m.Movie.Price, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Movie.Price)
                    </div></div>
                <div class="col-sm-6" 6>    <div class="form-group">
                        @Html.LabelFor(m => m.Movie.AmountAvailable)
                        @Html.TextAreaFor(m => m.Movie.AmountAvailable, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Movie.AmountAvailable)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Movie.GenreId)
                        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "GenreName"), "Select a Movie Genre", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Movie.GenreId)
                    </div></div>
            </div>
        </div>
    </div>
    <br/><br/>
    @Html.HiddenFor(m => m.Movie.Id)
    @Html.AntiForgeryToken()
    <button class="btn-primary" type="submit">Save</button>
    @Html.ActionLink("Home", "Index", "Home", new { @class = "btn-default" })
}