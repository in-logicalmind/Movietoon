@model Movietoon.ViewModels.RentalViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Rental's details</h2>

<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">Customer</div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(r => r.Customer.FirstName, new { @class = "form-inline" })
                    @Model.Customer.FirstName
                </div>
                <div class="form-group">
                    @Html.LabelFor(r => r.Customer.LastName, new { @class = "form-inline" })
                    @Model.Customer.LastName
                </div>
                <div class="form-group">
                    @Html.LabelFor(r => r.Customer.YearOfBirth, new { @class = "form-inline" })
                    @Model.Customer.YearOfBirth
                </div>
                <div class="form-group">
                    @Html.LabelFor(r => r.Customer.MembershipType, new { @class = "form-inline" })
                    @Model.Customer.MembershipType.Description
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">Contact Information</div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="form-group">
                        @Html.LabelFor(r => r.Customer.Email, new { @class = "form-inline" }):
                        @Model.Customer.Email
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(r => r.Customer.MobilePhone, new { @class = "form-inline" }):
                        @Model.Customer.MobilePhone
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br/>

<table id="rentals" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Name of Movies</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var rental in Model.Rentals)
    {
        <tr>
            <td>@rental.Id</td>
            <td>@rental.RentedDate</td>
            <td>@rental.Movie.Title</td>
            <td>@rental.TotalAfterDiscount</td>
        </tr>
    }
    
    </tbody>
    

</table>

 @section scripts
 {
     <script>
         $(document).ready(function() {
             $('#rentals').DataTable();
         });
     </script>
 }
