@model Movietoon.ViewModels.RentalViewModel
@{
    ViewBag.Title = "ReportRentMovies";
}

<h2>Report Rent Movies</h2>

<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">Movie</div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(r => r.Movie.Title, new { @class = "form-inline" })
                    @Model.Movie.Title
                </div>
                <div class="form-group">
                    @Html.LabelFor(r => r.Movie.ReleaseYear, new { @class = "form-inline" })
                    @Model.Movie.ReleaseYear
                </div>
                <div class="form-group">
                    @Html.LabelFor(r => r.Movie.Genre, new { @class = "form-inline" })
                    @Model.Movie.Genre.GenreName
                </div>
                <div class="form-group">
                    @Html.LabelFor(r => r.Movie.Price, new { @class = "form-inline" })
                    @Model.Movie.Price
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">Other Information</div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="form-group">
                        @Html.LabelFor(r => r.Movie.DateAdded, new { @class = "form-inline" })
                        @Model.Movie.DateAdded
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(r => r.Movie.AmountAvailable, new { @class = "form-inline" })
                        @Model.Movie.AmountAvailable
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(r => r.Movie.AvailableForRental, new { @class = "form-inline" })
                        @Model.Movie.AvailableForRental
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

<table id="rentals" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Renters</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model.Rentals)
        {
            <tr>
                <td>@rental.Id</td>
                <td>@rental.RentedDate</td>
                <td>@rental.Customer.FirstName @rental.Customer.LastName</td>
                <td>@rental.TotalAfterDiscount</td>
            </tr>
        }

    </tbody>


</table>

@section scripts
 {
    <script>
         $(document).ready(function() {
             $('#rentals').DataTable();
         });
    </script>
}